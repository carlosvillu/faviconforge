{
  "name": "faviconforge",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "playwright test --retries=1",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "deploy": "npm run deploy:prepare && netlify deploy --prod --skip-functions-cache && npm install",
    "deploy:preview": "npm run deploy:prepare && netlify deploy --skip-functions-cache && npm install",
    "deploy:prepare": "rm -rf node_modules/sharp node_modules/@img && npm install --os=linux --cpu=x64 sharp",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:generate:prod": "DB_ENV=production drizzle-kit generate",
    "db:migrate:prod": "DB_ENV=production drizzle-kit migrate"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-router/node": "7.10.1",
    "@react-router/serve": "7.10.1",
    "@stripe/stripe-js": "^8.6.1",
    "accept-language-parser": "^1.5.0",
    "better-auth": "^1.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.0",
    "i18next": "^25.7.2",
    "isbot": "^5.1.31",
    "jszip": "^3.10.1",
    "lucide-react": "^0.556.0",
    "png-to-ico": "^3.0.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.4.1",
    "react-router": "7.10.1",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "stripe": "^20.1.2",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "optionalDependencies": {
    "@img/sharp-linux-x64": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@netlify/vite-plugin-react-router": "^2.1.2",
    "@playwright/test": "^1.57.0",
    "@react-router/dev": "7.10.1",
    "@tailwindcss/vite": "^4.1.13",
    "@testcontainers/postgresql": "^11.9.0",
    "@types/accept-language-parser": "^1.5.8",
    "@types/node": "^22",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/sharp": "^0.31.1",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "pg": "^8.16.3",
    "prettier": "^3.7.4",
    "shadcn": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.16"
  }
}
